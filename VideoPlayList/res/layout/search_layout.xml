<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="9dp"
              android:paddingRight="9dp"
              android:paddingBottom="15dp"
              android:paddingTop="15dp"
              android:background="@drawable/search_popup_background"
        >

    <TextView
        android:id="@+id/youtube_search_legend"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:text="Search YouTube"
        android:layout_marginTop="13dp"
        android:textColor="@color/GhostWhite"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/youtube_search_term"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/youtube_search_legend"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        
        />

    <LinearLayout
            android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/youtube_search_term"
        android:gravity="center_horizontal"
        >
        <Button
                android:id="@+id/youtube_search_go"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:text="Go!"
                />

        <Button
                android:id="@+id/youtube_search_cancel"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Nevermind"
                />
    </LinearLayout>

</RelativeLayout>
        